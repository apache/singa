{
  "root": true,
  "env": {
    "node": true,
    "mocha": true
  },
  "extends": ["babel", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error"
  },
  "overrides": [
    {
      "files": ["website/**/*.js"],
      "parserOptions": {
        "jsx": true
      },
      "plugins": ["react"],
      "rules": {
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error"
      }
    },
    {
      "files": ["website/**/*.md"],
      "plugins": ["markdown"]
    }
  ]
}